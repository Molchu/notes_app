{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Todos los Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-s", "tests"],     // ejecuta todos los tests
      "cwd": "${workspaceFolder}",       // raíz del proyecto
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug Test Archivo Actual",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-q", "-s", "${file}"],   // ejecuta solo el archivo abierto
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug Test Específico",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-q",
        "-s",
        "tests/unit/test_user.py::test_create_user_valid"
      ],                                // cambia el nombre del test aquí
      "cwd": "${workspaceFolder}",      // raíz del proyecto
      "env": { "PYTHONPATH": "${workspaceFolder}" },
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}